<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp">

    <com.flyco.roundview.RoundTextView
        android:id="@+id/tvTagHobbie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="10dp"
        android:text="Foot"
        android:textColor="@color/colorPrimary"
        rv:rv_backgroundColor="@color/colorWhite"
        rv:rv_backgroundPressColor="@color/colorPrimary"
        rv:rv_isRadiusHalfHeight="true"
        rv:rv_isRippleEnable="false"
        rv:rv_strokeColor="@color/colorPrimary"
        rv:rv_strokePressColor="@color/colorWhite"
        rv:rv_strokeWidth="1dp"
        rv:rv_textPressColor="@color/colorWhite" />

</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeActionbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="DotStepperStyle">
        <item name="ms_stepperType">dots</item>
        <item name="ms_activeStepColor">#FFFFFF</item>
        <item name="ms_inactiveStepColor">#006867</item>
        <item name="ms_bottomNavigationBackground">?attr/colorAccent</item>
    </style>

    <style name="EditText_login" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">@color/colorGreyClair</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:background">@drawable/edt_border_white</item>
    </style>

    <style name="TextViewSignup" parent="AppTheme">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/background_text_view_grey</item>
    </style>

    <style name="EditText_register" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">@color/colorGreyClair</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:background">@drawable/edt_border_white</item>

    </style>

    <style name="EditText_address" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:background">@drawable/background_address_planning_management</item>

    </style>

    //button

    <style name="button_Login" parent="AppTheme">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/background_grey_radios</item>


    </style>

    <style name="button_ok" parent="AppTheme">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/background_btn_ok</item>


    </style>

    <style name="button_ok_orange" parent="AppTheme">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/background_orange_radios</item>

    </style>

    <style name="button_false_grey" parent="AppTheme">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/background_grey_radios</item>

    </style>


    <style name="button_true_blue" parent="AppTheme">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/background_blue_radios</item>
    </style>

</resources>
